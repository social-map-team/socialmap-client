<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

 <LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="50dp"
     android:orientation="horizontal"
     android:background="@drawable/header_bg">
     <ImageButton
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:layout_weight="1"
         android:src="@drawable/btn_selector"
         android:background="#00000000"
         android:id="@+id/back_btn_phone"
         />
     <TextView
         android:layout_width="225dp"
         android:layout_height="50dp"
         android:gravity="center"
         android:text="注册"
         android:textSize="23sp"
         android:textColor="@color/register_title_text"/>
     <ImageButton
         android:id="@+id/help_phone"
         android:layout_width="0dp"
         android:layout_height="45dp"
         android:layout_weight="1"
         android:src="@drawable/question_selector"
         android:background="@color/transparent"
         />

     </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:id="@+id/register_et_phone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn_verify"
        android:text="@string/register_btn_verify_text"/>

</LinearLayout>